<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_product"
        tools:context=".ProductActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.35">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/appbar_padding_top">

                <ImageView

                        android:id="@+id/imgProduct"
                        android:layout_width="129dp"
                        android:layout_height="134dp"
                        tools:srcCompat="@drawable/icons8_search_100px"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/border"/>
                <TextView
                        android:text="ชื่อสินค้า"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtViewProductName"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/imgProduct" android:textSize="18sp" android:textStyle="bold"/>

                <EditText
                        android:id="@+id/txtProductName"
                        android:inputType="textPersonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtViewProductName"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:ems="45"
                        android:background="@drawable/border"
                        android:hint="กรอกชื่อสินค้า"
                        />


            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6">
           <!--<ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">-->
            <LinearLayout
                    android:id="@+id/parent_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/appbar_padding_top"
                    android:orientation="vertical">

            <TableRow
                      android:id="@+id/tblCaption"
                      android:layout_width="match_parent"
                      android:layout_height="35dp"
                      android:background="@drawable/border_fill" >

                <TextView
                        android:text="ขนาด"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:textSize="18sp"/>
                <TextView
                        android:text="ต้นทุน"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:textSize="18sp"/>
                <TextView
                        android:text="ราคาขาย"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:textSize="18sp" />
                <TextView
                    android:text="จำนวน"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textSize="18sp" />
                <TextView
                        android:text="ลบ"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.20"
                        android:gravity="center"
                        android:textSize="18sp" />
                </TableRow>
                <TableRow android:layout_width="match_parent"
                          android:layout_height="35dp">

                    <Spinner
                            android:id="@+id/type_spinner_size"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:entries="@array/types"
                            android:layout_weight="0.25"
                            android:padding="5dp"
                            android:spinnerMode="dialog"
                            android:gravity="center" />
                    <EditText
                            android:id="@+id/txtCost"
                            android:hint="ต้นทุน"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:padding="5dp"
                            android:layout_weight="0.25"
                            android:gravity="center"
                            android:background="@null"
                            android:textSize="18sp"/>
                    <EditText
                            android:id="@+id/txtPrice"
                            android:hint="ราคา"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:padding="5dp"
                            android:layout_weight="0.25"
                            android:gravity="center"
                            android:background="@null"
                            android:textSize="18sp" />
                    <EditText
                            android:id="@+id/txtQty"
                            android:hint="จำนวน"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:padding="5dp"
                            android:background="@null"
                            android:layout_weight="0.25"
                            android:gravity="center"
                            android:textSize="18sp" />
                    <Button
                            android:id="@+id/delete_button"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="0.20"
                            android:layout_marginBottom="5dp"
                            android:scaleType="fitCenter"
                            android:onClick="onDeleteField"
                            android:text="Del"

                           />

                </TableRow>

                <Button
                        android:id="@+id/add_field_button"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#555"
                        android:layout_gravity="center"
                        android:textColor="#FFF"
                        android:onClick="onAddField"
                        android:text="Add Field"
                        android:paddingLeft="5dp"/>
            </LinearLayout>
        <!--</ScrollView>-->
        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>